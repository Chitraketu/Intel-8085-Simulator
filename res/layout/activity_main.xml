<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        
        android:id="@+id/ll1">

        <EditText
            
            android:id="@+id/t1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:cursorVisible="false"
            android:editable="false"
            android:ems="10"
            android:focusable="true"
            android:gravity="center"
            android:maxLength="4"
            android:text="-UPS"
            android:textSize="30dp" >
        </EditText>

        <EditText
            
            android:id="@+id/t2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0.25"
            android:cursorVisible="false"
            android:editable="false"
            android:ems="10"
            android:focusable="true"
            android:gravity="center"
            android:maxLength="2"
            android:text="85"
            android:textSize="30dp" >
        </EditText>

        <Button
            android:id="@+id/getins"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.15"
            android:layout_height="wrap_content"
            android:gravity="center"
            
             />

        <Button
            android:id="@+id/vi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="INS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/ll2"
         android:layout_below="@+id/ll1"
        android:orientation="horizontal" 
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
       

        <Button
            android:id="@+id/bC"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tag="2"
            android:text="C" />
        <!-- This android:tag is for reference to the abcdefhl array -->

        <Button
            android:id="@+id/bD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tag="3"
            android:text="D" />
        <!-- This android:tag is for reference to the abcdefhl array -->

        <Button
            android:id="@+id/bE"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tag="4"
            android:text="E" />
 <!-- This tag is for reference to the abcdefhl array -->

        <Button
            android:id="@+id/bF"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tag="7"
            android:text="F" />
        <!-- This android:tag is for reference to the abcdefhl array -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" 
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/ll3"
        android:layout_below="@+id/ll2">

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tag="5"
            android:text="8" />
        <!-- This android:tag is for reference to the abcdefhl array -->

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tag="6"
            android:text="9" />
        <!-- This android:tag is for reference to the abcdefhl array -->

        <Button
            android:id="@+id/bA"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tag="0"
            android:text="A" />
        <!-- This android:tag is for reference to the abcdefhl array -->

        <Button
            android:id="@+id/bB"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tag="1"
            android:text="B" />
        <!-- This android:tag is for reference to the abcdefhl array -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" 
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/ll4"
        android:layout_below="@+id/ll3">

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="5" />

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="6" />

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="7" />

         <TextView
            android:id="@+id/pcsp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            
            android:visibility="gone" />
         
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" 
        android:id="@+id/ll5"
        android:layout_below="@+id/ll4">

        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2" />

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="3" />

        <TextView
            android:id="@+id/info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/flagbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/ll5"
        
         >

        <TextView
            android:id="@+id/sign"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S" 
            
            />

        <TextView
            android:id="@+id/zero"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Z" 
            />

        <TextView
            android:id="@+id/acarry"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="AC"
             />

        <TextView
            android:id="@+id/parity"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="P" 
            />

        <TextView
            android:id="@+id/carry"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CY" 
            />
    </LinearLayout>

    <View
            android:id="@+id/space"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_above="@+id/ll6" />
    
    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <Button
                android:id="@+id/prev"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="PREV" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:clickable="false"
                android:text="BLANK"
                android:visibility="invisible" />

            <Button
                android:id="@+id/next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="NEXT" />
        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:orientation="vertical" >

            <Button
                android:id="@+id/exm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="EXAM MEM" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:clickable="false"
                android:text="BLANK"
                android:visibility="invisible" />

            <Button
                android:id="@+id/exr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="EXAM REG" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:clickable="false"
                android:text="BLANK"
                android:visibility="invisible" />

            <Button
                android:id="@+id/reset"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="RESET" />
        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <Button
                android:id="@+id/go"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="GO" />

            

            <Button
                android:id="@+id/singlestep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="SINGLE STEP" />

            <Button
                android:id="@+id/exec"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="EXEC" />
        </LinearLayout>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>